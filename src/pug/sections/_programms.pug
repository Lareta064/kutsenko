						a(href="img/miniature1.jpg" data-fancybox="gallery")
							img(src="img/miniature1.jpg" alt="img")
						a(href="img/miniature2.jpg" data-fancybox="gallery")
							img(src="img/miniature2.jpg" alt="img")
						a(href="img/miniature3.jpg" data-fancybox="gallery")
							img(src="img/miniature3.jpg" alt="img")
						a(href="img/miniature4.jpg" data-fancybox="gallery")
							img(src="img/miniature4.jpg" alt="img")
						a(href="img/miniature5.jpg" data-fancybox="gallery")
							img(src="img/miniature5.jpg" alt="img")
			.programms-list__item
				.pr-icon.pr-icon--book
					.icon-book
						img(src="img/book.png", alt="icon")
				.number
					span 54
				.programm-text.text-50
					p дополнительных материала<br> и полезных ссылок

			.programms-list__item
				.number.number--dashed
					span 16
				.programm-text.text-50
